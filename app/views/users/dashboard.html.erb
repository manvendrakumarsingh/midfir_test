<style type="text/css">
hr.dotted {
  border-top: 1px dashed black;
}
</style>
<div class="container tm-gray-bg" style="margin-top: 1%;">
  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row" style="margin-top: 1%;">
      <div class="col-lg-12">
         <div class="ibox product-detail">
            <div class="ibox-content">
               <div class="row" >
                  <div class="col-md-4">
                     <div class="product-images">
                        <div>
                           <div class="image-imitation">
                             <img style = "width: 100%;" src='<%=@user.profile_img.present? ? "#{@user.profile_img}" : "/assets/placeholder.png"%>'>
                           </div>
                        </div><br>
                      </div>
                  </div>
                <div class="col-md-8">
                  <div class="row">
                    <div class="col-md-8">
                      <h2 class="font-bold m-b-xs">
                        <h3><%=@user.full_name.present? ? @user.full_name.capitalize : "-" %></h3>
                        <small><%=@user.city.capitalize%> <%=country_name(@user.country).capitalize%></small>
                      </h2>
                    </div> 
                      <div class="col-md-4">
                        <h4 class="font-bold m-b-xs pull-right">
                          <a href="#" data-target="#edit-user-modal" data-toggle="modal"  data-backdrop="static" data-dismiss="modal" data-remote="<%= edit_user_path(@user.id)%>" #edit-user-modal>Edit Profile</a>
                        </h4>
                      </div>                  
                      <div class="row">
                        <div class="col-lg-12">
                          <%= simple_format @user.about %>
                        </div>
                      </div>                  
                  </div>
               </div>
             </div>
              <div class="row">
                <div class="col-lg-4">
                  <input type="submit" class="btn theme-btn form-control" value="Upload Profile Picture" id="sign_in" style="background-color: #d2cdcd;"><br>
                </div>
                <div class="col-lg-8">
                  <p class="pull-right" style="margin-right: 2%;"><%= @user.email %> | <%=@user.contact_number%></p>
                </div>
              </div>
          </div>
      </div>
    </div>
  </div>
  </div>  
 <hr class="dotted">
<div class="row">  
    <%=form_for :penting,html: {:id=>"sign_in_form"}, :authenticity_token => true do |f|%>
      <div class="col-md-12">
        <h4 class="pull-right">
          <a href="#">Add Penting</a>
        </h4>
      </div>
    <%end%>
    <div class="section-margin-top">  
    <%if @pentings.present?%>    
      <div class="row">        
        <%@pentings.each_with_index do |penting,index|%>
          <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 col-xxs-12" style="border: 1px solid black;border-radius: 4px; padding: 18px;margin-left: 2%;">
            <div class="tm-home-box-2">           
              <img src="<%=penting.image.present? ? "#{penting.image}" : "/assets/placeholder.png"%>" style="width: 100%">            
            </div>
            <div style="margin-top: 4%;">
              <center><a href="#">Penting <%=index%></a></center>
            </div>
          </div>  
        <%end%>                      
      </div>   
      <%else%>
        <div class="alert alert-danger text-center"><h4>No any pentings available it</h4></div>
      <%end%>     
    </div>    

</div>
</div>


<div class="modal fade" id="edit-user-modal" tabindex="-1" role="dialog" aria-hidden="true">  
  <div class="modal-dialog" role="document">
    <div class="modal-content">
     
       
    </div>
  </div>
</div>


<script type="text/javascript">
  <%if flash[:success].present?%>
    swal("success","<%=flash[:success]%>","success")
  <%elsif flash[:error].present?%>
    swal("warning","<%=flash[:error]%>","warning")
  <%end%>

  
</script>